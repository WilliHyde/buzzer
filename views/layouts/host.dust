<!DOCTYPE html>
<html>
<head>
	<title>{system_name|s}{?title} | {title}{/title}</title>
	<link href="/css/base.less" rel="stylesheet/less" type="text/css" />
	<link href="/css/host.less" rel="stylesheet/less" type="text/css" />
	<script src="/js/less-1.3.0.min.js" type="text/javascript"></script>
</head>
<body>

	<div id="header-wrapper">
		<header id="navbar">
			<div class="navbar-left">
				<h1><a href="/host">{system_name|s}</a></h1>
			</div>
			<div class="navbar-right">
				<h3>Host Interface</h3>
			</div>
		</header>
	</div>
	<div id="container">
		<div id="container-inner">

			{#flash}
			<div style="background:#f66">
				<p>{warn}</p>
			</div>
			{/flash}
			
			<div id="main_left">
				{+col1}
					Oops, something went wrong...
				{/col1}
			</div>
			<div id="main_right">
				{+col2}
					Oops, something went wrong...
				{/col2}
			</div>
		
		</div>
	</div>

	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
	<script src="/faye.js"></script>
	<script src="/js/Host.js"></script>
</body>
</html>
